{
  "manifest_version": 3,
  "name": "Chess.com Tweaks",
  "version": "1.7.3",
  "homepage_url": "https://github.com/vietan0/hide-ratings",
  "description": "Chess.com Tweaks is a Firefox extension that enhances your Chess.com experience by decluttering the interface and providing additional analysis tools.",
  "icons": {
    "128": "src/icons/chesslogo.png"
  },
  "permissions": [
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://www.chess.com/*",
    "https://explorer.lichess.ovh/*",
    "https://lichess.org/paste"
  ],
  "background": {
    "scripts": ["dist/background.js"],
    "service_worker": "dist/background.js"
  },
  "action": {
    "default_icon": "src/icons/chesslogo.png",
    "default_title": "Chess.com Tweaks",
    "default_popup": "src/popup/index.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.chess.com/*"],
      "js": ["dist/content.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://lichess.org/paste"],
      "js": ["dist/lichessContent.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["src/icons/*", "src/images/*", "dist/mainWorldScript.js"],
      "matches": ["https://www.chess.com/*"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "{b8ac3f83-6217-4483-a9a5-1c4e2908be4f}"
    }
  }
}
