{
  "manifest_version": 2,
  "name": "Chess.com Tweaks",
  "version": "1.4.0",
  "homepage_url": "https://github.com/vietan0/hide-ratings",
  "description": "Chess.com Tweaks is a Firefox extension that helps you customize your Chess.com experience by letting you hide distracting elements like player ratings, country flags, and even your opponent's details during a game. It also adds convenient Lichess analysis buttons for your finished games.",
  "icons": {
    "48": "src/icons/chesslogo.png"
  },
  "permissions": [
    "scripting",
    "storage",
    "webNavigation",
    "webRequest",
    "webRequestBlocking",
    "https://www.chess.com/*"
  ],
  "background": {
    "scripts": [
      "dist/background.js"
    ]
  },
  "browser_action": {
    "default_icon": "src/icons/chesslogo.png",
    "default_title": "Chess.com Tweaks",
    "default_popup": "src/popup/index.html"
  },
  "content_scripts": [
    {
      "matches": ["*://www.chess.com/*"],
      "js": ["dist/content.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["*://lichess.org/paste"],
      "js": ["dist/lichessContent.js"],
      "run_at": "document_end"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "{b8ac3f83-6217-4483-a9a5-1c4e2908be4f}"
    }
  }
}
