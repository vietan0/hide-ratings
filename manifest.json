{
  "manifest_version": 2,
  "name": "Hide Chess.com Ratings",
  "version": "1.3.8",
  "homepage_url": "https://github.com/vietan0/hide-ratings",
  "description": "Hide Chess.com and Wintrcat's Game Review ratings to help you focus on playing at your best - without distraction.",
  "icons": {
    "48": "icons/chesslogo.png"
  },
  "content_security_policy": "script-src 'self' 'wasm-unsafe-eval' 'unsafe-eval' https://cdn.jsdelivr.net;",
  "permissions": [
    "scripting",
    "storage",
    "webNavigation",
    "webRequest",
    "webRequestBlocking",
    "https://www.chess.com/*"
  ],
  "background": {
    "scripts": [
      "dist/background.js"
    ]
  },
  "browser_action": {
    "default_icon": "icons/chesslogo.png",
    "default_title": "Chess.com Tweaks",
    "default_popup": "/popup/index.html"
  },
  "content_scripts": [
    {
      "matches": ["*://www.chess.com/*"],
      "js": ["dist/content.js"],
      "run_at": "document_end"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "{b8ac3f83-6217-4483-a9a5-1c4e2908be4f}"
    }
  }
}
